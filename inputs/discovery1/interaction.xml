<?xml version="1.0" encoding="utf-8"?>
<nta>

	<name>discovery_task</name>

	<group id="0" init="true" final="false" x="182.0" y="134.0">
		<name>Greeting</name>
		<micro>
			<name>Greeter</name>
			<parameter type="bool" val="true">Greet_with_speech</parameter>
			<parameter type="bool" val="false">Greet_with_handshake</parameter>
			<parameter type="bool" val="true">Wait_for_response</parameter>
		</micro>

	</group>

	<group id="5" init="false" final="true" x="675.0" y="270.0">
		<name>Farewell</name>
		<micro>
			<name>Farewell</name>
		</micro>

	</group>

	<group id="1" init="false" final="true" x="675.0" y="270.0">
		<name>ReferToDesk</name>
		<micro>
			<name>Remark</name>
			<parameter type="str" val="To visit someone in the discovery building, please speak to an actual human being behind the desk.">content</parameter>
			<parameter type="bool" val="true">use_gesture</parameter>
			<parameter type="bool" val="true">Allow_human_to_respond</parameter>
		</micro>

	</group>

	<group id="2" init="false" final="true" x="675.0" y="270.0">
		<name>HandleDelivery</name>
		<micro>
			<name>Remark</name>
			<parameter type="str" val="To find out about deliveries, please speak to an actual human being behind the desk.">content</parameter>
			<parameter type="bool" val="true">use_gesture</parameter>
			<parameter type="bool" val="true">Allow_human_to_respond</parameter>
		</micro>

	</group>

	<group id="3" init="false" final="true" x="675.0" y="270.0">
		<name>PromptToAsk</name>
		<micro>
			<name>Remark</name>
			<parameter type="str" val="Why don't you try asking me about things like the history of the building, or parking!">content</parameter>
			<parameter type="bool" val="true">use_gesture</parameter>
			<parameter type="bool" val="true">Allow_human_to_respond</parameter>
		</micro>

	</group>

	<group id="4" init="false" final="true" x="675.0" y="270.0">
		<name>AnswerQuestion</name>
		<micro>
			<name>Remark</name>
			<parameter type="str" val="Placeholder for question answering.">content</parameter>
			<parameter type="bool" val="true">use_gesture</parameter>
			<parameter type="bool" val="true">Allow_human_to_respond</parameter>
		</micro>
	</group>

	<!--FROM HELLO STATE-->
	<transition>
		<source ref="0"/>
		<target ref="1"/>
		<guard condition="human_visitation"/>
	</transition>

	<transition>
		<source ref="0"/>
		<target ref="2"/>
		<guard condition="human_delivery"/>
	</transition>

	<transition>
		<source ref="0"/>
		<target ref="3"/>
		<guard condition="human_general"/>
		<guard condition="human_ignore"/>
	</transition>

	<transition>
		<source ref="0"/>
		<target ref="4"/>
		<guard condition="human_about"/>
		<guard condition="human_directions"/>
	</transition>

	<transition>
		<source ref="0"/>
		<target ref="5"/>
		<guard condition="human_goodbye"/>
	</transition>

