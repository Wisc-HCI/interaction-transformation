<?xml version="1.0" encoding="utf-8"?>
<nta>

	<name>handoff_task</name>

	<group id="0" init="true" final="false" x="182.0" y="134.0">
		<name>Greet</name>
		<micro>
			<name>Greeter</name>
			<parameter type="bool" val="true">Greet_with_speech</parameter>
			<parameter type="bool" val="false">Greet_with_handshake</parameter>
			<parameter type="bool" val="true">Wait_for_response</parameter>
		</micro>

	</group>

	<group id="1" init="false" final="false" x="675.0" y="270.0">
		<name>Explain</name>
		<micro>
			<name>Remark</name>
			<parameter type="bool" val="In a moment we'll begin collaborating on adding blocks to a bin.">content</parameter>
			<parameter type="bool" val="false">use_gesture</parameter>
			<parameter type="bool" val="false">Allow_human_to_respond</parameter>
		</micro>
	</group>

	<group id="2" init="false" final="false" x="675.0" y="270.0">
		<name>Direct</name>
		<micro>
			<name>Remark</name>
			<parameter type="bool" val="Please find a short purple cylinder from the bag of blocks, and place it in the designated loading area. Then find a small green rectangle and place it on top of the purple cylinder. Finally, find a small yellow cylinder and place it to the right of the other cylinder.">content</parameter>
			<parameter type="bool" val="true">use_gesture</parameter>
			<parameter type="bool" val="false">Allow_human_to_respond</parameter>
		</micro>
	</group>

	<group id="3" init="false" final="true" x="675.0" y="270.0">
		<name>Bye</name>
		<micro>
			<name>Farewell</name>
		</micro>

	</group>

	<transition>
		<source ref="0"/>
		<target ref="1"/>
		<guard condition="human_ready"/>
		<guard condition="human_ignore"/>
	</transition>

	<transition>
		<source ref="1"/>
		<target ref="2"/>
		<guard condition="human_ready"/>
		<guard condition="human_ignore"/>
	</transition>

	<transition>
		<source ref="2"/>
		<target ref="3"/>
		<guard condition="human_ready"/>
		<guard condition="human_ignore"/>
	</transition>

	<design>Delivery</design>
</nta>
